  "components": {
    "schemas": {
      "AddressDTO": {
        "required": [
          "City",
          "Street",
          "ZipCode"
        ],
        "type": "object",
        "properties": {
          "Street": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "City": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "ZipCode": {
            "maxLength": 10,
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "OrderCreateDTO": {
        "required": [
          "CustomerId",
          "Items"
        ],
        "type": "object",
        "properties": {
          "CustomerId": {
            "type": "integer",
            "format": "int32"
          },
          "Items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItemCreateDTO"
            }
          }
        },
        "additionalProperties": false
      },
      "OrderDTO": {
        "type": "object",
        "properties": {
          "OrderId": {
            "type": "integer",
            "format": "int32"
          },
          "OrderDate": {
            "type": "string",
            "nullable": true
          },
          "Amount": {
            "type": "number",
            "format": "double"
          },
          "CustomerName": {
            "type": "string",
            "nullable": true
          },
          "CustomerEmail": {
            "type": "string",
