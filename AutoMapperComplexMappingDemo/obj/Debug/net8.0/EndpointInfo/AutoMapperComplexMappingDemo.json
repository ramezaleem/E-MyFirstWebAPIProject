            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "OrderItemCreateDTO": {
        "required": [
          "ProductId",
          "Quantity"
        ],
        "type": "object",
        "properties": {
          "ProductId": {
            "type": "integer",
            "format": "int32"
          },
          "Quantity": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "OrderItemDTO": {
        "type": "object",
        "properties": {
          "ProductName": {
            "type": "string",
            "nullable": true
          },
          "ProductPrice": {
            "type": "number",
            "format": "double"
          },
          "Quantity": {
            "type": "integer",
            "format": "int32"
          },
          "TotalPrice": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
